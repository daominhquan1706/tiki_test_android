<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tiki_main_color</item>
        <item name="colorPrimaryDark">@color/tiki_main_color_darker</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorAccent">#6200ea</item>
        <item name="android:colorControlNormal">#f9a825</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">#131212</item>
        <item name="colorPrimaryDark">#131212</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
